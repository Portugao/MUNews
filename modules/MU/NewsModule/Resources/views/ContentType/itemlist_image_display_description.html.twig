{# Purpose of this template: Display images within an external context #}
<dl>
    {% for image in items %}
        <dt>{{ image|munewsmodule_formattedTitle }}</dt>
        {% if image.caption %}
            <dd>{{ image.caption|striptags|truncate(200, true, '&hellip;') }}</dd>
        {% endif %}
    {% else %}
        <dt>{{ __('No entries found.') }}</dt>
    {% endfor %}
</dl>
