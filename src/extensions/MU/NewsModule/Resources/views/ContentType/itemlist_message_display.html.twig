{# purpose of this template: Display messages within an external context #}
{% trans_default_domain 'message' %}
{% for message in items %}
    <h3>{{ message|munewsmodule_formattedTitle }}</h3>
    <p><a href="{{ path('munewsmodule_message_display', {'slug': message.slug}) }}" title="{{ 'Read more'|trans|e('html_attr') }}">{% trans %}Read more{% endtrans %}</a>
    </p>
{% endfor %}
